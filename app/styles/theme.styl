*, *:before, *:after
    box-sizing border-box
html, body
    height 100%
    width 100%
    margin 0
    padding 0
    overflow-x hidden
    background-color $base
    font-family "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif
body
    padding 0
    >div
        height 100%
        width 100%

.table
    display table
    height 100%
    vertical-align middle
    padding 0
    margin 0
    .table-cell
        display table-cell
        vertical-align inherit
        padding inherit
        margin inherit
        height 100%
    .table-row
        display table-row
        vertical-align inherit
        padding inherit
        margin inherit
        height 100%

.full-width
    float left
    width 100%

code
    word-wrap break-word

.logo
    text-align center
    .heading
        display block
        i
            font-size 130px
            display inherit
        span
            text-transform lowercase
            display inherit

$nav-size = 60px
.theme-container
    max-width 520px
    margin 25px auto
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
    border-radius 3px
    overflow hidden
    position relative
.navbar
    height $nav-size
    overflow hidden
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
.navbar-icons, .icons-right
    position absolute
    top 0
.navbar-icons
    margin 0 25px
    position relative
    a
        text-decoration none
        line-height $nav-size
        transition .25s all ease
        font-size 26px
        &:hover
            text-decoration none
            color $primary-light
.icons-right
    right 0
.icons-left
    left 0
.hero
    padding 25px 15px
    height 240px
    box-shadow 0 2px 6px rgba(0,0,0,0.25)
    position relative
.float-icon
    height 60px
    width 60px
    border-radius 50%
    position absolute
    right 30px
    margin-top -30px
    box-shadow 0 2px 6px rgba(0,0,0,0.25)
    transition all .25s ease
    text-align center
    display block
    z-index 999
    span
        line-height 60px
        font-size 38px
    &:hover
        box-shadow 3px 6px 12px rgba(0,0,0,0.45)
        transform scale(1.25)
.titles
    width 100%
    max-width 380px
    margin 0 auto
    > *
        margin 0
.list-container
    margin 0
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
.list-item
    padding 10px 25px
    padding-left 75px
    border-bottom 1px solid $divider
    position relative
    &:last-child
        border none
    &:first-child
        border-bottom 1px solid $divider !important
.list-icon
    margin 0
    font-size 32px
    position absolute
    top 35px
    left 20px
h1, h2, h3
    font-weight 300
    line-height 1.5
h1
    font-size 42px
h2
    font-size 22px
h3
    margin 15px 0 5px
    font-weight 400
    font-size 18px
a
    color inherit
    text-decoration none
    font-weight 400
    &:hover
        text-decoration underline
p
    font-weight 300
    font-size 16px
    margin-top 0
.colors-container
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
    border-radius 3px
    font-size 0
    padding 0
    max-width 768px
    margin 0 auto 25px
.color
    font-size 16px
    display inline-block
    position relative
    width 33.333333%
    font-weight 700
    padding 10px
    transition all .15s ease
    z-index 1
    user-select none
    cursor pointer
    text-align center
    margin 0
    line-height 1.25
    span
        display block
        color inherit
        font-weight 400
        padding-top 5px
    &:hover
        transform scale(1.25)
        z-index 99
        box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
        border-radius 3px !important
    @media (max-width: 520px)
        width 100%
    &:nth-child(1)
        border-radius 3px 0 0 0
    &:nth-child(3)
        border-radius 0 3px 0 0
    &:nth-child(7)
        border-radius 0 0 3px 0
    &:nth-child(9)
        border-radius 0 0 0 3px

.valign-wrapper
    display flex
    align-items center